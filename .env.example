# Google OAuth (REQUIRED for authentication)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Database
DATABASE_URL=your_mongodb_connection_string

# App URLs
APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# WhatsApp API (if using WhatsApp features)
WHATSAPP_API_KEY=your_whatsapp_api_key

# Email (Optional)
SMTP_FROM=noreply@yourapp.com
POSTMARK_API_TOKEN=your_postmark_token
POSTMARK_SIGN_IN_TEMPLATE=your_template_id
POSTMARK_ACTIVATION_TEMPLATE=your_template_id

# Storage (Optional)
S3_TOKEN=your_s3_token

# Upstash Redis (Optional)
KV_URL=your_kv_url
KV_REST_API_URL=your_kv_rest_api_url
KV_REST_API_TOKEN=your_kv_rest_api_token
KV_REST_API_READ_ONLY_TOKEN=your_kv_read_only_token

# QStash (Optional)
QSTASH_CURRENT_SIGNING_KEY=your_signing_key
QSTASH_NEXT_SIGNING_KEY=your_next_signing_key

# Analytics (Optional)
NEXT_PUBLIC_UMAMI_DOMAIN=your_umami_domain
NEXT_PUBLIC_UMAMI_SITE_ID=your_umami_site_id
